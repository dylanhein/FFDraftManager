<UserControl x:Class="FFDraftManager.Tabs.DraftBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FFDraftManager.Helpers"
             xmlns:services="clr-namespace:FFDraftManager.Services"
             mc:Ignorable="d">
    <Grid
        local:GridHelpers.ColumnCount="{Binding Source={x:Static services:DraftSettingsService.Instance}, Path=NumberOfTeams, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}"
        local:GridHelpers.RowCount="{Binding Source={x:Static services:DraftSettingsService.Instance}, Path=TeamSize, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}">
    </Grid>
</UserControl>
